<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false">
        <layer-list>
            <!--the shadow comes from here-->
            <item android:bottom="5dp" android:drawable="@android:drawable/dialog_holo_light_frame" android:left="5dp" android:right="5dp" android:top="5dp">

            </item>

            <item android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp">
                <!--whatever you want in the background, here i preferred solid white -->
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:padding="15dp" android:shape="rectangle">
                    <solid android:color="@color/online" />
                    <corners android:radius="25dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <layer-list>
            <!--the shadow comes from here-->
            <item android:bottom="5dp" android:drawable="@android:drawable/dialog_holo_light_frame" android:left="5dp" android:right="5dp" android:top="5dp">

            </item>

            <item android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp">
                <!--whatever you want in the background, here i preferred solid white -->
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:padding="15dp" android:shape="rectangle">
                    <solid android:color="@color/offline" />
                    <corners android:radius="25dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>