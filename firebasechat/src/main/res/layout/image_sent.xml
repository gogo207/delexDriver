<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/relative_layout_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"

        android:background="@drawable/balloon_outgoing_normal">

        <!--android:layout_height="wrap_content"-->
        <com.example.moda.firebasebasedchat.Utilities.AdjustableImageView
            android:id="@+id/imgshow"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginEnd="8dp"

            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"

            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:background="#F0F4C3"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:scaleType="centerCrop"

            android:src="@drawable/home_grid_view_image_icon"
            android:transitionName="image"


            />


        <TextView
            android:id="@+id/ts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/imgshow"

            android:layout_marginBottom="5dp"

            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/comma"
            android:layout_toRightOf="@+id/comma"
            android:text="15:56 AM"
            android:textColor="#888888"
            android:textSize="10sp"
            android:textStyle="italic"

            />


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/single_tick_green"
            android:layout_width="12dp"
            android:layout_height="12dp"

            android:layout_below="@+id/imgshow"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="18dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/ts"

            android:layout_toRightOf="@+id/ts"
            android:background="@drawable/ic_single_tick"
            android:visibility="gone" />


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/clock"
            android:layout_width="10dp"
            android:layout_height="10dp"

            android:layout_below="@+id/imgshow"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="18dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/ts"

            android:layout_toRightOf="@+id/ts"

            android:background="@drawable/clock"
            android:visibility="visible" />


        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imgshow"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="8dp"


            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:text=""
            android:textColor="#888888"
            android:textSize="10sp"
            android:textStyle="italic"

            />


        <TextView
            android:id="@+id/comma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgshow"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/date"

            android:layout_toRightOf="@+id/date"
            android:text=","
            android:textColor="#888888"
            android:textSize="10sp"
            android:textStyle="italic" />


        <RelativeLayout
            android:id="@+id/dummy"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp">


            <TextView
                android:id="@+id/fnf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerInParent="true"
                android:gravity="center_horizontal"


                android:text="Image Not Found"
                android:textColor="#808080"
                android:textSize="18sp"

                android:visibility="gone" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>




